package cadastro;

public class CadastrarFuncionario {
    // Atributos
    private String nome;
    private String cargo;

    // Construtor
    public CadastrarFuncionario(String nome, String cargo) {
        this.nome = nome;
        this.cargo = cargo;
    }

    // Getters e Setters
    public String getNome() {
        return nome;
    }

    public void setNome(String nome) {
        this.nome = nome;
    }

    public String getCargo() {
        return cargo;
    }

    public void setCargo(String cargo) {
        this.cargo = cargo;
    }

    // Método para exibir os dados do funcionário
    @Override
    public String toString() {
        return "Nome: " + nome + ", Cargo: " + cargo;
    }
    
}
